{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#E4E4E9",
  "padding": 5,
  "width": 1100,
  "height": 450,
  "style": "cell",
  "autosize": "none",
  "signals": [
    {"name": "selected_year", "value": "average"},
    {
      "name": "clicked",
      "value": "",
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "clicked == datum.value ? '' : datum.value",
          "force": true
        }
      ]
    },
    {"name": "selected_state", "value": "All"},
    { "name": "tx", "update": "width / 2" },
    { "name": "ty", "update": "height / 2" },
    {
      "name": "scale",
      "value": 3800,
      "on": [{
        "events": {"type": "wheel", "consume": true},
        "update": "clamp(scale * pow(1.001, -event.deltaY * pow(16, event.deltaMode)), 3800, 50000)"
      }]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{
        "events": "mousedown",
        "update": "[rotateX, centerY]"
      }]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{
        "events": "mousedown",
        "update": "copy('projection')"
      }]
    },
    {
      "name": "start",
      "value": null,
      "on": [{
        "events": "mousedown",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "drag", "value": null,
      "on": [{
        "events": "[mousedown, window:mouseup] > window:mousemove",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "delta", "value": null,
      "on": [{
        "events": {"signal": "drag"},
        "update": "[drag[0] - start[0], start[1] - drag[1]]"
      }]
    },
    {
      "name": "rotateX", "value": -112.04762503390877,
      "on": [{
        "events": {"signal": "delta"},
        "update": "angles[0] + delta[0]"
      }]
    },
    {
      "name": "centerY", "value": 4.079141137028495,
      "on": [{
        "events": {"signal": "delta"},
        "update": "clamp(angles[1] + delta[1], -60, 60)"
      }]
    }
  ],
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/data/Rivers_WQI.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "formula",
          "expr": "(parseInt(datum.WQI_2015) + parseInt(datum.WQI_2016) + parseInt(datum.WQI_2017)) / 3",
          "as": "average_WQI"
        },
        {
          "type": "formula",
          "expr": "if(datum.average_WQI > 80, 'Clean', if(datum.average_WQI <= 60, 'Polluted', 'Slightly Polluted'))",
          "as": "average_Category"
        }
      ]
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/msian_states.json",
      "format": {"type": "topojson", "feature": "msian_states"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/msian_rivers.json",
      "format": {"type": "topojson", "feature": "msian_rivers"},
      "transform": [
        {
          "type": "lookup",
          "from": "source_0",
          "key": "River",
          "fields": ["properties.name"],
          "values": [
            "WQI_2015",
            "Category_2015",
            "WQI_2016",
            "Category_2016",
            "WQI_2017",
            "Category_2017",
            "average_Category"
          ]
        }
      ]
    },
    {"name": "selected", "on": [{"trigger": "clicked", "insert": "clicked"}]}
  ],
  "projections": [
    {
      "name": "projection",
      "type": "equirectangular",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "stroke": {"value": "#E4E4E9"},
          "strokeWidth": {"value": 2},
          "fill": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"},
          "fillOpacity": {
            "signal": "if(selected_state == 'All' || datum.properties.name == selected_state, 1, 0.3)"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "interactive": true,
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "strokeWidth": {"signal": "if(scale < 15000, 1.5, 4)"},
          "fill": {"value": "transparent"},
          "stroke": {
            "scale": "color",
            "signal": "if(selected_year == 'average', datum.average_Category, if(selected_year == '2015', datum.Category_2015, if(selected_year == '2016', datum.Category_2016, datum.Category_2017)))"
          },
          "opacity": [
            {
              "test": "clicked == '' || clicked == if(selected_year == 'average', datum.average_Category, if(selected_year == '2015', datum.Category_2015, if(selected_year == '2016', datum.Category_2016, datum.Category_2017)))",
              "value": 1
            },
            {"value": 0.3}
          ],
          "ariaRoleDescription": {"value": "geoshape"},
          "tooltip": {
            "signal": "{\"River\": datum[\"properties\"][\"name\"], \"WQI in 2015\": format(datum[\"WQI_2015\"], \"\"), \"WQI in 2016\": format(datum[\"WQI_2016\"], \"\"), \"WQI in 2017\": format(datum[\"WQI_2017\"], \"\")}"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["Clean", "Slightly Polluted", "Polluted"],
      "range": ["#208AAE", "#898B80", "#60492C"]
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "symbolType": "circle",
      "orient": "bottom-right",
      "direction": "horizontal",
      "symbolStrokeWidth": 4,
      "labelFontSize": 14,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "opacity": [
              {"test": "clicked == '' || clicked == datum.value", "value": 1},
              {"value": 0.3}
            ]
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "opacity": [
              {"test": "clicked == '' || clicked == datum.value", "value": 1},
              {"value": 0.3}
            ]
          }
        }
      }
    }
  ],
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}