{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#E4E4E9",
  "padding": 5,
  "width": 1100,
  "height": 450,
  "style": "cell",
  "signals": [
    {
      "name": "year",
      "value": "average",
      "bind": {"input": "select", "element": "#year-selector", "options": ["2015", "2016", "2017", "average"]}
    },
    {
      "name": "clicked", "value": "",
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "clicked == datum.value ? '' : datum.value",
          "force":  true
        }
      ]
    },
    {
      "name": "selected_state",
      "value": "All"
    }
  ],
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/data/Rivers_WQI.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "formula",
          "expr": "(parseInt(datum.WQI_2015) + parseInt(datum.WQI_2016) + parseInt(datum.WQI_2017)) / 3",
          "as": "average_WQI"
        },
        {
          "type": "formula",
          "expr": "if(datum.average_WQI > 80, 'Clean', if(datum.average_WQI <= 60, 'Polluted', 'Slightly Polluted'))",
          "as": "average_Category"
        }
      ]
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/msian_states.json",
      "format": {"type": "topojson", "feature": "msian_states"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/msian_rivers.json",
      "format": {"type": "topojson", "feature": "msian_rivers"},
      "transform": [
        {
          "type": "lookup",
          "from": "source_0",
          "key": "River",
          "fields": ["properties.name"],
          "values": [
            "Category_2015",
            "Category_2016",
            "Category_2017",
            "average_Category"
          ]
        }
      ]
    },
    {
      "name": "selected",
      "on": [
        {"trigger": "clicked", "insert": "clicked"}
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('source_1'), data('source_2')]"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "stroke": {"value": "#E4E4E9"},
          "strokeWidth": {"value": 2},
          "fill": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"},
          "fillOpacity": {
            "signal": "if(selected_state == 'All' || datum.properties.name == selected_state, 1, 0.3)"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "interactive": true,
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "strokeWidth": {"value": 1.5},
          "fill": {"value": "transparent"},
          "stroke": {
            "scale": "color",
            "signal": "if(year == 'average', datum.average_Category, if(year == '2015', datum.Category_2015, if(year == '2016', datum.Category_2016, datum.Category_2017)))"
          },
          "opacity": [
            { "test": "clicked == '' || clicked == if(year == 'average', datum.average_Category, if(year == '2015', datum.Category_2015, if(year == '2016', datum.Category_2016, datum.Category_2017)))", "value": 1.0},
            { "value": 0.30}
          ],
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Category: \" + (isValid(datum[\"Category\"]) ? datum[\"Category\"] : \"\"+datum[\"Category\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["Clean", "Slightly Polluted", "Polluted"],
      "range": ["#208AAE", "#898B80", "#60492C"]
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "symbolType": "circle",
      "orient": "none",
      "direction": "horizontal",
      "legendX": 400,
      "legendY": 40,
      "symbolStrokeWidth": 4,
      "labelFontSize": 14,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "opacity": [
              { "test": "clicked == '' || clicked == datum.value", "value": 1.0 },
              { "value": 0.30 }
            ]
          }
        },
        "labels": {
          "name": "legendLabel", 
          "interactive": true,
          "update": {
            "opacity": [
              { "test": "clicked == '' || clicked == datum.value", "value": 1.0 },
              { "value": 0.30 }
            ]
          }
        }
      }
    }
  ],
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}