{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 900,
  "height": 500,
  "config": {"view": {"stroke": "transparent"}},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/malaysian_states.json",
        "format": {"type": "topojson", "feature": "malaysian_states"}
      },
      "projection": {"type": "equirectangular"},
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 2},
      "encoding": {"color": {"value": "#F4F4F9"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/vg_json/msian_rivers.json",
        "format": {"type": "topojson", "feature": "filtered_msian_rivers"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/data/Rivers_WQI.csv"
            },
            "key": "River",
            "fields": ["Category_2017"]
          }
        },
        {"calculate": "datum.Category_2017", "as": "Category"}
      ],
      "mark": {"type": "geoshape", "filled": false, "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "Category",
          "type": "nominal",
          "legend": {
            "title": null,
            "orient": "bottom-right",
            "offset": 0
          },
          "scale": {
            "domain": [
              "Clean",
              "Slightly Polluted",
              "Polluted"
            ],
            "range": [
              "#B8DBD9",
              "#586F7C",
              "#2F4550"
            ]
          }
        }
      }
    }
  ]
}