{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "background": "#E4E4E9",
    "description": "Proportion of rivers in 2015",
    "data": {
        "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Assignment 2/data/Rivers_WQI.csv"
    },
    "encoding": {
        "theta": {
            "aggregate": "count",
            "field": "value",
            "type": "quantitative",
            "stack": true
        },
        "color": {
            "field": "Category_2015",
            "type": "nominal",
            "legend": null,
            "scale": {
                "domain": [
                    "Clean",
                    "Slightly Polluted",
                    "Polluted"
                ],
                "range": [
                    "#208AAE",
                    "#898B80",
                    "#60492C"
                ]
            }
        }
    },
    "layer": [
        {
            "mark": {
                "type": "arc",
                "innerRadius": 80,
                "cornerRadius": 50, 
                "padAngle": 0.02
            }
        },
        {
            "mark": {
                "type": "text",
                "radius": 140
            },
            "encoding": {
                "text": {
                    "field": "Category_2015",
                    "type": "nominal"
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "text": "2015",
                "size": 40,
                "fill": "#0D2149"
            }
        }
    ],
    "view": {
        "stroke": null
    }
}